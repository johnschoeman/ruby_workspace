<html>
    <body>
      <h1><%= @mailbox_name %></h1>
      <table>
        <thead>
          <tr>
            <th>Date</th>
            <th>From</th>
            <th>Subject</th>
          </tr>
        </thead>
        <tbody>
          <% @emails.each do |email| %>
            <tr>
              <td><%= email.date %></td>
              <td><%= email.from %></td>
              <td><%= email.subject %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </body>
  </html>